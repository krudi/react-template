{
    "extends": "@krudi/typescript-config/nextjs.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["./components/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "components/**/*.tsx",
        "client.d.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
